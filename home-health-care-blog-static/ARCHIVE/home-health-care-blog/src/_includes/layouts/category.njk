{% extends "layouts/base.njk" %}

{% block content %}
<section class="category-hero">
  <div class="container">
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>
  </div>
</section>

<section class="feed container">
  <div class="feed__grid">
    {% for post in pagination.items %}
      {% include "partials/post-card.njk" with post %}
    {% endfor %}
  </div>

  <nav class="pagination" aria-label="Pagination">
    {% if pagination.href.previous %}
      <a class="pagination__link" rel="prev" href="{{ pagination.href.previous }}">Previous</a>
    {% endif %}
    <span class="pagination__status">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages | length }}</span>
    {% if pagination.href.next %}
      <a class="pagination__link" rel="next" href="{{ pagination.href.next }}">Next</a>
    {% endif %}
  </nav>
</section>
{% endblock %}
